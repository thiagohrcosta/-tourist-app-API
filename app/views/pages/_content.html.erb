<div class="container">
  <div class="ticket-header">
    <h3>Os melhores ingressos da região</h3>
    <h1>Escolha o seu e divirta-se com sua família</h1>
  </div>

  <div class="ticket-container">
    <% @tickets.each do |ticket| %>
    <div class="ticket-card">
      <img class="home-ticket-img" src="<%= ticket.photo %>" alt="">
      <div class="ticket-content">
        <p><%= ticket.name %></p>
        <p class="ticket-price">R$ <%= number_with_precision(ticket.price, precision: 2) %></p>
      </div>
      <%= link_to "Detalhes" , ticket_path(ticket.id), class: "btn-buy-ticket" %>

    </div>
    <% end %>
  </div>

</div>
